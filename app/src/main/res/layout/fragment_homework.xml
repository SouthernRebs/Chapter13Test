<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
              android:orientation="vertical">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homework_title_label"/>

    <EditText
        android:id="@+id/homework_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/homework_title_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homework_details_label"/>

    <EditText
        android:id="@+id/homework_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/homework_details_label"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_title"/>

    <Button
        android:id="@+id/homework_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/homework_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homework_solved_label"/>

</LinearLayout>